{
  "index_patterns": [
    "product-index"
  ],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 0
    },
    "mappings": {
      "_source": {
        "enabled": true
      },
      "properties": {
        "code": {
          "type": "keyword",
          "index": true
        },
        "name": {
          "type": "keyword",
          "index": true
        },
        "description": {
          "type": "text",
          "index": false
        },
        "img": {
          "type": "binary"
        },
        "price": {
          "type": "double",
          "index": true
        },
        "height": {
          "type": "long",
          "index": true
        },
        "width": {
          "type": "long",
          "index": true
        },
        "length": {
          "type": "long",
          "index": true
        },
        "plants": {
          "type": "keyword",
          "index": true
        }
      }
    }
  }
}
